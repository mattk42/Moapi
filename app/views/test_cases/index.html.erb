<h1><%= link_to @test_suite.name, @test_suite %> : Test Cases</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Method</th>
      <th>Endpoint</th>
      <th>Timeout</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @test_cases.each do |test_case| %>
      <tr>
        <td><%= test_case.name %></td>
        <td><%= test_case.method %></td>
        <td><%= test_case.endpoint %></td>
        <td><%= test_case.timeout %></td>
        <td><%= link_to 'Show', test_suite_test_case_path(@test_suite,test_case) %></td>
        <td><%= link_to 'Edit', edit_test_suite_test_case_path(@test_suite,test_case) %></td>
        <td><%= link_to 'Destroy', test_suite_test_case_path(@test_suite,test_case), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test case', new_test_suite_test_case_path %>
