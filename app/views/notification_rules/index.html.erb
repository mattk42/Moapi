<h1><%= link_to @test_suite.name, @test_suite %> : Notification Rules</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Script</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @notification_rules.each do |notification_rule| %>
      <tr>
        <td><%= notification_rule.name %></td>
        <td><%= notification_rule.script %></td>
        <td><%= link_to 'Show', test_suite_notification_rule_path(@test_suite,notification_rule) %></td>
        <td><%= link_to 'Edit', edit_test_suite_notification_rule_path(@test_suite,notification_rule) %></td>
        <td><%= link_to 'Destroy', test_suite_notification_rule_path(@test_suite,notification_rule), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification rule', new_test_suite_notification_rule_path(@test_suite) %>
