<h1><%= link_to @test_suite.name, @test_suite %> : <%= link_to @test_case.name, test_suite_test_case_path(@test_suite,@test_case) %> : Assertions</h1>

<table>
  <thead>
    <tr>
      <th>Field</th>
      <th>Expected value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assertions.each do |assertion| %>
      <tr>
        <td><%= assertion.field %></td>
        <td><%= assertion.expected_value %></td>
        <td><%= link_to 'Show', test_suite_test_case_assertion_path(@test_suite,@test_case,assertion) %></td>
        <td><%= link_to 'Edit', edit_test_suite_test_case_assertion_path(@test_suite,@test_case,assertion) %></td>
        <td><%= link_to 'Destroy', test_suite_test_case_assertion_path(@test_suite,@test_case,assertion), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assertion', new_test_suite_test_case_assertion_path %>
